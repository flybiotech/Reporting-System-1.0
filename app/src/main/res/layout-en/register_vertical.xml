<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:scrollbarSize="@dimen/scrolWidth"
        android:scrollbarThumbVertical="@color/viewfinder_mask"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/user_name"
                        android:textAllCaps="false"
                        android:textSize="@dimen/textViewNameSize"
                        android:layout_weight="2"
                        android:typeface="sans"
                        />

                    <EditText
                        android:id="@+id/edit_registerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit"
                        android:gravity="center"
                        android:hint="@string/user_name_hint"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:typeface="sans"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/user_password"
                        android:textAllCaps="false"
                        android:textSize="@dimen/textViewNameSize"
                        android:layout_weight="2"
                        android:typeface="sans"
                        />

                    <EditText
                        android:id="@+id/edit_registerPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit"
                        android:gravity="center"
                        android:hint="@string/user_password_registration_hint"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:typeface="sans"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxLength="20"
                        android:text="@string/user_password_again"
                        android:textAllCaps="false"
                        android:textSize="@dimen/textViewNameSize"
                        android:layout_weight="2"
                        android:typeface="sans"
                        />

                    <EditText
                        android:id="@+id/edit_registerPassCover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit"
                        android:gravity="center"
                        android:hint="@string/user_password_again_hint"
                        android:maxLength="20"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:typeface="sans"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/user_register_email"
                        android:textAllCaps="false"
                        android:textSize="@dimen/textViewNameSize"
                        android:layout_weight="2"
                        android:typeface="sans"
                        />

                    <EditText
                        android:id="@+id/edit_registerEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit"
                        android:gravity="center"
                        android:hint="@string/user_register_email_hint"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:typeface="sans"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/weakRed1">

                <Button
                    android:id="@+id/btn_registerSure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/text_service_color"
                    android:text="@string/button_ok"
                    android:textSize="@dimen/buttonsSizeEN"
                    android:typeface="sans"
                    />

                <Button
                    android:id="@+id/btn_registerBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/text_service_color"
                    android:text="@string/button_cancel"
                    android:textSize="@dimen/buttonsSizeEN"
                    android:typeface="sans"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_abortion_num"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_modify_abortionCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/patient_abortion_num_hint"
            android:inputType="number"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans" />

    </LinearLayout>













    <LinearLayout

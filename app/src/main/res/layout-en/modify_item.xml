            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/patient_HCG_hint"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans" />


    </LinearLayout>



    <LinearLayout

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_id"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_modify_bianhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:enabled="false"
            android:hint="@string/patient_id"
            android:padding="2dp"
            android:text="1"
            android:textAllCaps="false"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_name"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_modify_djName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/patient_required"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColorHint="@color/lightRed"
            android:typeface="sans" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_telephone"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_modify_djPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/patient_required"
            android:inputType="number"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColorHint="@color/lightRed"
            android:typeface="sans" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_age"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_modify_djAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/patient_required"
            android:inputType="number"
            android:maxLength="2"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColorHint="@color/lightRed"
            android:typeface="sans" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

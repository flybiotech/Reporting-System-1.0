<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_item"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="5"
                    android:paddingBottom="2dp"
                    android:paddingTop="5dp"
                    android:text="@string/patient_select_data"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textViewNameSize"
                    android:typeface="sans"
                    />

                <TextView
                    android:id="@+id/textView_search_Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="3"
                    android:background="@drawable/edittext_select"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textViewNameSize"
                    android:typeface="sans"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="5"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="@string/patient_name"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textViewNameSize"
                    android:typeface="sans"
                    />

                <EditText
                    android:id="@+id/editText_search_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="3"
                    android:background="@drawable/edittext_select"
                    android:gravity="center"
                    android:hint="@string/patient_select_name"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textViewNameSize"
                    android:typeface="sans"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="5"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="@string/patient_ID"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textViewNameSize"
                    android:typeface="sans"
                    />

                <EditText
                    android:id="@+id/editText_search_IdNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="3"
                    android:background="@drawable/edittext_select"
                    android:gravity="center"
                    android:hint="@string/patient_select_ID"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textViewNameSize"
                    android:typeface="sans"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_SSNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="5"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="@string/patient_social_security_number"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textViewNameSize"
                    android:typeface="sans"
                    />

                <EditText
                    android:id="@+id/editText_search_SSNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="3"
                    android:background="@drawable/edittext_select"
                    android:gravity="center"
                    android:hint="@string/patient_select_social_security_number"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textViewNameSize"
                    android:typeface="sans"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_CaseNumbe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="5"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="@string/patient_medical_record_number"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textViewNameSize"
                    android:typeface="sans"
                    />

                <EditText
                    android:id="@+id/editText_search_CaseNumbe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="3"
                    android:background="@drawable/edittext_select"
                    android:gravity="center"
                    android:hint="@string/patient_select_medical_record_number"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textViewNameSize"
                    android:typeface="sans"
                    />

            </LinearLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_search_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_bg"
                    android:text="@string/patient_select"
                    android:textAllCaps="false"
                    android:typeface="sans"
                    />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
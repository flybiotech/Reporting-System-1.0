<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_id"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_bianhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:enabled="false"
            android:hint="@string/patient_id"
            android:padding="2dp"
            android:text="1"
            android:textAllCaps="false"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_name"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_djName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/patient_required"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColorHint="@color/lightRed"
            android:typeface="sans" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_telephone"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_djPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/patient_required"
            android:inputType="number"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColorHint="@color/lightRed"
            android:typeface="sans"
            android:maxLength="15"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_age"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_djAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/patient_required"
            android:inputType="number"
            android:maxLength="2"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColorHint="@color/lightRed"
            android:typeface="sans" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_HCG"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_patient_HCG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/print_message_hint"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_parity_num"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_patient_childCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/print_message_hint"
            android:inputType="number"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_gravidity_num"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_patient_pregnantCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/print_message_hint"
            android:inputType="number"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_ID"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_patient_idNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/print_message_hint"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="30"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_occupation"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_patient_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/print_message_hint"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_sex_num"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_patient_sexPartnerCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/print_message_hint"
            android:inputType="number"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_smoking_history"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_patient_smokeTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/print_message_hint"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_social_security_number"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_patient_ssNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/print_message_hint"
            android:inputType="number"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_medical_record_number"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_patient_CaseNumbe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/print_message_hint"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans" />


    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_09"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_abortion_num"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_patient_abortionCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/print_message_hint"
            android:inputType="number"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans" />

    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_check_notes"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edit_patient_checkNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_select"
            android:hint="@string/print_message_hint"
            android:inputType="textMultiLine"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_marriage"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <Spinner
            android:id="@+id/spin_marry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:entries="@array/marry"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_source"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <Spinner
            android:id="@+id/spin_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:entries="@array/languages"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans"></Spinner>

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_contraceptive_methods"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <Spinner
            android:id="@+id/spin_patient_birthControlMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:entries="@array/birthControlMode"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="@string/patient_blood_type"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize"
            android:typeface="sans" />

        <Spinner
            android:id="@+id/spin_patient_bloodType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:entries="@array/bloodType"
            android:padding="2dp"
            android:textAllCaps="false"
            android:typeface="sans"></Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/text_dengji_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="@string/patient_clear"
            android:textAllCaps="false"
            android:typeface="sans" />


        <Button
            android:id="@+id/text_dengji_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="@string/patient_save"
            android:textAllCaps="false"
            android:typeface="sans" />


        <Button
            android:id="@+id/text_dengji_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="@string/patient_add_new"
            android:textAllCaps="false"
            android:typeface="sans"

            />


    </LinearLayout>


</LinearLayout>
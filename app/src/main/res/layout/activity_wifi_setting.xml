<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_wifi_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_item"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_wifisetting_getImageSoft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_select"
            android:text="@string/setting_Treasures_of_vision_wifi"
            android:textAllCaps="false"
            android:textSize="@dimen/dp_13"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_wifisetting_hp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_select"
            android:text="@string/setting_printer_wifi"
            android:textAllCaps="false"
            android:textSize="@dimen/dp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text="@string/setting_WIFI_filters"
            android:textAllCaps="false"
            android:textSize="@dimen/textViewNameSize" />

        <EditText
            android:id="@+id/edit_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/setting_WIFI_filters_hint"
            android:textAllCaps="false"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text="@string/setting_WIFI_name"
            android:textAllCaps="false"
            android:textSize="@dimen/dp_16" />

        <EditText
            android:id="@+id/edit_wifiSetting_name01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/setting_WIFI_name_hint"
            android:textAllCaps="false"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text="@string/setting_WIFI_password"
            android:textAllCaps="false"
            android:textSize="@dimen/dp_16" />

        <EditText
            android:id="@+id/edit_wifiSetting_pass01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/setting_WIFI_password_hint"
            android:textAllCaps="false"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50">

        <Button
            android:id="@+id/btn_wifiSetting_clear01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@drawable/btn_bg"
            android:text="@string/patient_clear"
            android:textAllCaps="false"
            android:textSize="@dimen/dp_16"
            />

        <Button
            android:id="@+id/btn_wifiSetting_save01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@drawable/btn_bg"
            android:text="@string/patient_save"
            android:textAllCaps="false"
            android:textSize="@dimen/dp_16"/>
    </RelativeLayout>


</LinearLayout>

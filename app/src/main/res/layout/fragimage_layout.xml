<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarSize="@dimen/scrolWidth"
        android:scrollbarThumbVertical="@color/viewfinder_mask"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                >
                <TextView
                    android:id="@+id/textview_caseName01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5" />


                <Button
                    android:id="@+id/btn_casenext01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:text="@string/case_image_down"
                    android:typeface="sans"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    />
                <Button
                    android:id="@+id/btn_casepre01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:text="@string/case_image_up"
                    android:typeface="sans"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@id/btn_casenext01"
                    />

            </RelativeLayout>

                <com.view.ImageViewRotation
                    android:id="@+id/frag_imagecase_01"
                    android:layout_width="@dimen/dp_350"
                    android:layout_height="@dimen/dp_350"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                >
                <TextView
                    android:id="@+id/textview_caseName02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5" />


                <Button
                    android:id="@+id/btn_casenext02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:text="@string/case_image_Contrast_down"
                    android:typeface="sans"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    />
                <Button
                    android:id="@+id/btn_casepre02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:text="@string/case_image_Contrast_up"
                    android:typeface="sans"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@id/btn_casenext02"
                    />



            </RelativeLayout>

            <com.view.ImageViewRotation
                android:id="@+id/frag_imagecase_02"
                android:layout_width="@dimen/dp_350"
                android:layout_height="@dimen/dp_350"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
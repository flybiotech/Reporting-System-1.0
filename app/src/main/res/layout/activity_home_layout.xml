<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/weakRed1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_home_patientInfo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/textview_select_patient"
            android:gravity="center"
            android:text="@string/patients_information"
            android:textAllCaps="false"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView_home_getImageInfo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/textview_select_getimage"
            android:gravity="center"
            android:text="@string/image_get_image"
            android:textAllCaps="false"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView_home_printerInfo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/textview_select_printer"
            android:gravity="center"
            android:text="@string/print_Report_printing"
            android:textAllCaps="false"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView_home_casemanagerInfo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/textview_select_case"
            android:gravity="center"
            android:text="@string/case_title"
            android:textAllCaps="false"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView_home_settingInfo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/textview_select_setting"
            android:gravity="center"
            android:text="@string/setting_title"
            android:textAllCaps="false"
            android:textColor="#000" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linear_home_layout"></android.support.v4.view.ViewPager>

</RelativeLayout>
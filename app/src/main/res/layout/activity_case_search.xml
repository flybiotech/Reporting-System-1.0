<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.shizhenbao.activity.CaseSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <include layout="@layout/title_item"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:scrollbarSize="@dimen/dp_20"
            android:scrollbarThumbVertical="@color/viewfinder_mask">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_casesearch_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="@string/patient_name"
                        android:textAllCaps="false"
                        android:textSize="@dimen/dp_16" />

                    <EditText
                        android:id="@+id/edit_casesearch_Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="4"
                        android:background="@drawable/edittext_select"
                        android:gravity="center"
                        android:hint="@string/patient_select_name"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:textAllCaps="false"
                        android:textSize="@dimen/dp_16" />

                    />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_casesearch_02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:textAllCaps="false"
                        android:textSize="@dimen/dp_16" />

                    <EditText
                        android:id="@+id/edit_casesearch_tel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="4"
                        android:background="@drawable/edittext_select"
                        android:gravity="center"
                        android:hint="@string/case_select_telephoen_hint"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:textAllCaps="false"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_casesearch_03"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:textAllCaps="false"
                        android:textSize="@dimen/dp_16" />

                    <EditText
                        android:id="@+id/edit_casesearch_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="4"
                        android:background="@drawable/edittext_select"
                        android:gravity="center"
                        android:hint="@string/patient_select_medical_record_number"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:textAllCaps="false"
                        android:maxLength="8"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_casesearch_04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:textAllCaps="false"
                        android:textSize="@dimen/dp_16" />

                    <EditText
                        android:id="@+id/edit_casesearch_02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="4"
                        android:background="@drawable/edittext_select"
                        android:gravity="center"
                        android:hint="@string/patient_select_social_security_number"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:inputType="number"
                        android:textAllCaps="false"
                        android:maxLength="8"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_casesearch_05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_weight="2"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="@string/case_select_data"
                        android:textAllCaps="false"
                        android:textSize="@dimen/dp_16" />


                    <EditText
                        android:id="@+id/edit_casesearch_datestart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="4"
                        android:background="@drawable/edittext_select"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint="@string/case_select_data_begin"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:textAllCaps="false"
                        android:textSize="@dimen/dp_16" />

                    <EditText
                        android:id="@+id/edit_casesearch_dateend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="4"
                        android:background="@drawable/edittext_select"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint="@string/case_select_data_end"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:textAllCaps="false"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_100"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_casesearch_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_bg"
                        android:text="@string/patient_select"
                        android:textAllCaps="false"
                        android:textSize="@dimen/dp_15" />

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</RelativeLayout>

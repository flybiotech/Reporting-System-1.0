    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/textview_caseName01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_15"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"/>

                <com.view.ImageViewRotation
                    android:id="@+id/frag_imagecase_01"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_200"
                    android:layout_centerHorizontal="true"
                    android:scaleType="matrix"
                    android:layout_below="@+id/textview_caseName01"
                    />
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_50"
                    android:layout_alignParentBottom="true"
                >


                <Button
                android:id="@+id/btn_casenext01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:text="@string/case_image_down"
                android:typeface="sans"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_16"
                />
                <Button
                android:id="@+id/btn_casepre01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:text="@string/case_image_up"
                android:typeface="sans"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/btn_casenext01"
                android:textSize="@dimen/dp_16"
                />

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/textview_caseName02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/dp_15"
                    android:layout_centerHorizontal="true"
                   />

                <com.view.ImageViewRotation
                android:id="@+id/frag_imagecase_02"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                android:layout_gravity="center"
                android:scaleType="matrix"
                    android:layout_centerHorizontal="true"
                android:layout_below="@+id/textview_caseName02"
                />

                <RelativeLayout
                    android:id="@+id/rl_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_50"
                    >

                    <Button
                        android:id="@+id/btn_casenext02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        android:text="@string/case_image_down"
                        android:typeface="sans"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/dp_16"
                        />
                    <Button
                        android:id="@+id/btn_casepre02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        android:text="@string/case_image_up"
                        android:typeface="sans"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@id/btn_casenext02"
                        android:textSize="@dimen/dp_16"
                        />

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>